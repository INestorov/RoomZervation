<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<VBox fx:id="vBox" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" prefHeight="434.0" prefWidth="574.0" spacing="20.0"
       xmlns="http://javafx.com/javafx/8.0.171" fx:controller="application.controllers.ForgotPasswordController"
        stylesheets="app_theme.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <AnchorPane id="anchor" prefHeight="277.0" prefWidth="534.0">
        <children>
            <TextField fx:id="textField" layoutX="118.0" layoutY="72.0" prefHeight="26.0" prefWidth="250.0"/>
            <Label fx:id="label" layoutX="117.0" layoutY="23.0" prefHeight="35.0" prefWidth="300.0"
                   text="Enter the username to send an activation code.">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <Button fx:id="backButton" layoutX="118.0" layoutY="199.0" mnemonicParsing="false" onAction="#backToLogin"
                    prefHeight="46.0" prefWidth="250.0" text="Back to login" textFill="#fffbfb"/>
            <Button fx:id="sendButton" layoutX="118.0" layoutY="139.0" mnemonicParsing="false" text="Send activation key"
                    prefHeight="46" prefWidth="250" textFill="#fffbfb" onAction="#sendKey"/>
        </children>
    </AnchorPane>
</VBox>
